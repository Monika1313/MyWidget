<Window
    x:Class="MainApp.View.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:MainApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pu="clr-namespace:Panuon.WPF.UI;assembly=Panuon.WPF.UI"
    xmlns:viewmodel="clr-namespace:MainApp.ViewModel"
    x:Name="root"
    Title="设置"
    Width="800"
    Height="450"
    Background="{DynamicResource BackGroundBrush12}"
    FontSize="16"
    Foreground="{DynamicResource TextBrush98}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid>
            <Border
                Margin="10"
                BorderBrush="{DynamicResource BorderBrush26}"
                BorderThickness="0,0,0,1">
                <ListBox
                    x:Name="lb"
                    MinWidth="200"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    pu:ListBoxHelper.ItemsBorderThickness="6 0 0 0"
                    pu:ListBoxHelper.ItemsCornerRadius="4"
                    pu:ListBoxHelper.ItemsHoverBackground="{DynamicResource BackgroundBrush22}"
                    pu:ListBoxHelper.ItemsHoverBorderBrush="{DynamicResource BackgroundBrush22}"
                    pu:ListBoxHelper.ItemsMargin="4"
                    pu:ListBoxHelper.ItemsPadding="10,8"
                    pu:ListBoxHelper.ItemsSelectedBackground="{DynamicResource BackgroundBrush18}"
                    pu:ListBoxHelper.ItemsSelectedBorderBrush="{DynamicResource PrimaryBrush}"
                    pu:ListBoxHelper.ItemsSelectedForeground="{DynamicResource TextBrush98}"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="{DynamicResource TextBrush70}"
                    SelectedIndex="0"
                    SelectionChanged="ListBox_SelectionChanged">


                    <ListBoxItem>
                        卡片管理
                    </ListBoxItem>

                    <ListBoxItem>
                        侧栏管理
                    </ListBoxItem>

                    <ListBoxItem>
                        关于
                    </ListBoxItem>
                </ListBox>

            </Border>
        </Grid>


        <Frame x:Name="fm" Grid.Column="1" />
    </Grid>
</Window>
