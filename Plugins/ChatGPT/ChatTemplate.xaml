<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:data="clr-namespace:ChatGPT_GUI.Models"
    xmlns:selecter="clr-namespace:ChatGPT_GUI.Selecter">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/ChatGPT;component/Style/index.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <DataTemplate x:Key="UserDateTemplate" DataType="{x:Type data:ChatModel}">
        <Grid Margin="0,5" HorizontalAlignment="Right">
            <Grid.RenderTransform>
                <TranslateTransform />
            </Grid.RenderTransform>
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:0.3" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Unloaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                To="0"
                                Duration="0:0:0.3" />

                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Column="0"
                Margin="0,0,5,0"
                Padding="5"
                VerticalAlignment="Top"
                Background="{DynamicResource PrimaryBrush}"
                CornerRadius="5">
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource OnPrimaryBrush}"
                    Text="{Binding Message, Mode=OneWay}"
                    TextWrapping="Wrap" />
            </Border>
            <Border
                Grid.Column="1"
                Padding="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="{DynamicResource OutlineBrush}"
                CornerRadius="5">
                <Image
                    Width="20"
                    Height="20"
                    VerticalAlignment="Top"
                    Source="/Resources/user.png" />
            </Border>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="AIDateTemplate" DataType="{x:Type data:ChatModel}">
        <Grid Margin="0,5" HorizontalAlignment="Left">
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:0.3" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Unloaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                To="0"
                                Duration="0:0:0.3" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Column="1"
                Margin="5,0,0,0"
                Padding="5"
                VerticalAlignment="Center"
                Background="{DynamicResource SecondaryBrush}"
                CornerRadius="5">
                <TextBox
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="{DynamicResource OnSecondaryBrush}"
                    IsReadOnly="True"
                    Text="{Binding Message, Mode=OneWay}"
                    TextWrapping="WrapWithOverflow" />
            </Border>
            <Border
                Grid.Column="0"
                Margin="5,0,0,0"
                Padding="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="{DynamicResource PrimaryBrush}"
                CornerRadius="5">
                <Image
                    Width="20"
                    Height="20"
                    VerticalAlignment="Top"
                    Source="/Resources/aislogo.png" />
            </Border>
        </Grid>


    </DataTemplate>
</ResourceDictionary>