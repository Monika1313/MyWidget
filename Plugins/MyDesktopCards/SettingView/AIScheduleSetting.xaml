<Window
    x:Class="MyDesktopCards.SettingView.AIScheduleSetting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyDesktopCards.SettingView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pu="clr-namespace:Panuon.WPF.UI;assembly=Panuon.WPF.UI"
    Title="AIScheduleSetting"
    Width="800"
    Height="450"
    Background="{DynamicResource BackGroundBrush12}"
    FontSize="16"
    Foreground="{DynamicResource TextBrush98}"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PluginSDK;component/Styles/index.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel>
        <Border
            Padding="4"
            BorderBrush="{DynamicResource BorderBrush26}"
            BorderThickness="0,0,0,2"
            DockPanel.Dock="Top">

            <StackPanel Orientation="Horizontal">
                <TextBlock
                    FontFamily="{StaticResource SFI}"
                    FontSize="28"
                    Text="" />
                <TextBlock
                    Margin="10,0"
                    VerticalAlignment="Center"
                    FontSize="18"
                    Text="设置" />
            </StackPanel>
        </Border>
        <StackPanel>
            <GroupBox
                Background="Transparent"
                BorderThickness="0"
                Header="课程表链接">
                <StackPanel>

                    <TextBox
                        Margin="0,4"
                        VerticalContentAlignment="Top"
                        AcceptsReturn="True"
                        BorderThickness="1"
                        MinLines="4"
                        Style="{StaticResource SimpleTextBox}"
                        Text="{Binding ShareUrl}" />
                    <Button
                        Command="{Binding ImportTableCommand}"
                        Content="导入"
                        Style="{StaticResource SimpleBtnStyle}" />
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </DockPanel>
</Window>
