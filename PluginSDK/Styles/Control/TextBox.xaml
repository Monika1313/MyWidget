<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:purs="clr-namespace:Panuon.WPF.UI.Resources;assembly=Panuon.WPF.UI">

    <Style
        x:Key="SimpleTextBox"
        BasedOn="{StaticResource {x:Static purs:StyleKeys.TextBoxStyle}}"
        TargetType="TextBox">
        <Setter Property="Background" Value="{DynamicResource BackgroundBrush16}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush26}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush98}" />
    </Style>

</ResourceDictionary>